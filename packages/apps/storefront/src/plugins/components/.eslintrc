{
  "env": {
    "browser": true
  },
  "plugins": [
    "import",
    "simple-import-sort"
  ],
  "rules": {
    "simple-import-sort/exports": "error",
    "simple-import-sort/imports": [
      "error",
      {
        "groups": [
          [
            "^\\u0000",
            "^react",
            "^@react",
            "^[a-z]",
            "^@",
            "^[^.]",
            "^\\."
          ]
        ]
      }
    ],
  }
}
